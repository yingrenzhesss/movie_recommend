/* components/hot-item/hot-item.wxss */
.hot-item {
	display: inline-block;
	width: 100%;
}
.top {
	position: relative;
}
/* top区域 */
.top .image-container {
	display: flex;
	/* justify-content: center;
	align-items: center; */
}
.top .image-container .image {
	width: 100%;
	border-radius: 12rpx;
	background-size: cover;
}

.top .score {
	position: absolute;
	right: 0;
	bottom: 10rpx;
	color: #fff;
	font-size: 22rpx;
	border-radius: 12rpx;
	padding: 6rpx 18rpx;
	background: rgba(0, 0, 0, .5);
}

/* bottom区域 */
.hot-item .bottom {
	/* display: flex; */
	/* flex-direction: column; */
	/* 显示两行 ,由于父组件list的nowrap被继承到这里，所以要覆盖，不然bottom只显示一行*/
	/* white-space: normal;  */
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

.hot-item .bottom .title {
	font-size: 32rpx;
	padding: 10rpx;
}
.hot-item .bottom .actors {
	font-size: 28rpx;
}