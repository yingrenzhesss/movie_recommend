/* components/menu-item/menu-item.wxss */
.menu-item {
	display: inline-block;
	width: 100%;
	margin-bottom: 20rpx;
}
.top {
	position: relative;
	/* height: ; */
}
.top .image-container {
	width: 350rpx;
	height: 450rpx;
}
.top .image-container .image {
	width: 340rpx;
	height: 450rpx;
	border-radius: 12rpx;
	background-size: cover;
}
.top .score {
	position: absolute;
	right: 10rpx;
	bottom: 10rpx;
	color: #fff;
	font-size: 22rpx;
	border-radius: 12rpx;
	padding: 6rpx 10rpx;
	background: rgba(0,0,0, .5);
}
.top .date {
	position: absolute;
	left: 10rpx;
	bottom: 10rpx;
	color: #fff;
	font-size: 22rpx;
	border-radius: 12rpx;
	padding: 6rpx 10rpx;
	background: rgba(0,0,0, .5);
}
.menu-item .bottom {
	width: 100%;
	font-size: 26rpx;
	margin: 10rpx 0;
	
	/* 显示两行 ,由于父组件list的nowrap被继承到这里，所以要覆盖，不然歌单名字只显示一行*/
	white-space: normal; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}