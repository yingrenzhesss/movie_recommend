/* components/movie-item-v2/movie-item-v2.wxss */
.item {
	display: flex;
	align-items: center;
	margin: 36rpx 0 10rpx;
}

/* 封面 */
.item .cover-container {
	width: 120rpx;
	height: 120rpx;
	margin-left: 10rpx;
}
.item .image {
	width: 120rpx;
	height: 120rpx;
	border-radius: 16rpx;
	background-size: cover;
}

/* 电影排序index */
.index {
	font-size: 30rpx;
	font-weight: 550;
	margin-right: 10rpx;
}

/* 电影名字与短语 */
.info {
	margin: 0rpx 12rpx 0rpx 20rpx;
}
.info .source {
	display: flex;
	align-items: center;
	font-size: 24rpx;
	color: #666;
	margin-top: 10rpx;
	/* margin-left: 10rpx; */
}
.info .source .icon {
	width: 38rpx;
	height: 22rpx;
	margin-right: 10rpx;
}