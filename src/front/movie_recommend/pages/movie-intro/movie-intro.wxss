/* pages/movie-intro/movie-intro.wxss */
/* 内容区域背景设置 */
.content {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  color: rgb(248, 241, 241);
}

.content .bg-image {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.content .bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(5px);
}

/* 封面内容 */
.album {
  display: flex;
  margin-top: 60rpx;
  padding: 0 50rpx;
}

.album .image {
  width: 280rpx;
  height: 350rpx;
  border-radius: 16rpx;
}

.album .info {
  height: 350rpx;
  flex: 1;
  margin-left: 50rpx;
}

.album .info .title {
	font-size: 42rpx;
	font-weight: 700;
	color: #fff;
}
.album .info .director {
	font-size: 28rpx;
	padding: 10rpx 0;
}
.album .info .score {
	font-size: 36rpx;
	font-weight: 600;
	color: rgb(243, 229, 28);
	padding: 5rpx 0;
}
.album .info .release_region {
	display: flex;
	flex-wrap: nowrap;
	font-size: 28rpx;
	padding: 10rpx 0;
}
/* .album .info .release_region .release_date::after {
  content: " ";
} */
.album .info .types {
	font-size: 28rpx;
	padding: 10rpx 0;
}


/* 简介区 */
.one {
	padding: 10rpx 20rpx;
	/* display: flex;
	flex-direction: column; */
}

.description {
position: relative;
}

.description .set {
	font-size: 32rpx;
	font-weight: 700;
	color: black;
	padding: 16rpx 0;
}

.description .desc {
  display: -webkit-box;
  -webkit-line-clamp: 5; /* 设置行数的上限 */
  -webkit-box-orient: vertical;
  overflow: hidden;
	text-overflow: ellipsis;
}

.desc-expanded {
  display: block;
}
.expand-link {
  /* position: absolute;
  right: 0;
  bottom: 0;
  padding-left: 20px;  */
  color: rgba(7, 193, 250, 0.952);
  text-decoration: underline;
	cursor: pointer;
}


/* 演员设置 */
.actors {
	margin-top: 30rpx;
}

.actors .actors-set {
	font-size: 32rpx;
	font-weight: 700;
	color: black;
	padding: 16rpx 0;
}
.actors .actors-list {
  display: flex;
  height: 580rpx;
  margin-left: -20rpx;
}
.actors-list .actor-item {
  flex-shrink: 0;
  width: 300rpx;
  height: 400rpx;
  margin-left: 20rpx;
}
.actors-list .actor-item:last-of-type {
  padding-right: 20rpx;
}

.actor-item .item {
  display: inline-block;
  width: 100%;
  /* height: 280rpx; */
}
.actor-item .item .top .actor-avatar {
  width: 100%;
  height: 400rpx;
	border-radius: 12rpx;
	background-size: cover;
}


.actor-item .item .bottom {
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.actor-item .item .bottom .actor-name {
  font-size: 32rpx;
}
/* 收藏和评价 */
.others {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  /* margin-top: 30rpx; */
  font-size: 50rpx;
}
.others .collect{
  font-size: 34rpx;
}
.others .comment{
  font-size: 34rpx;
}
.star {
  width: 34rpx;
  height: 34rpx;
  margin-right: 8rpx;
}
.pencil {
  width: 34rpx;
  height: 34rpx;
  margin-right: 8rpx;
}

/* 评论设置 */
.comment-item {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-bottom: 10px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.noComment {
  padding: 10px;
}
